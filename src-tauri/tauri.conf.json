{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SC Binding Utility",
  "version": "0.7.1",
  "identifier": "com.boxxy.sc-joy-mapper",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SC Binding Utility",
        "width": 1500,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "../AllBinds.xml",
      "../joystick profiles/VKB Gladiator NXT Dual.json",
      "../joystick profiles/vkb_right.png",
      "../src-tauri/icons/update_avail.png"
    ]
  }
}